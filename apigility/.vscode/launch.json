  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for XDebug",
      "type": "php",
      "request": "launch",
      "log": true,
      "externalConsole": false,
      "pathMappings": {
        "/var/www": "/home/nogueira/Estudos/docker-samples/apigility"
      },
      "ignore": [
          "**/vendor/**/*.php"
      ]
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 8080
    }
  ]
}